[sub_resource type="GDScript" id="GDScript_p481n"]
resource_name = "FadeAnim"
script/source = "extends ColorRect

# Path to the next scene to transition to
@export var next_scene_path: String

# Reference to the AnimationPlayer node
@onready var _anim_player = $AnimationPlayer

# Called when the node enters the scene tree for the first time.
func _ready() -> void:
	_anim_player.play_backwards(\"Fade\")

func transition_to(_next_scene: String = next_scene_path) -> void:
	# Plays the Fade animation and waits until it finishes
	_anim_player.play(\"Fade\")
	await _anim_player.animation_finished
	# Changes the scene
	get_tree().change_scene_to_file(_next_scene)
"

